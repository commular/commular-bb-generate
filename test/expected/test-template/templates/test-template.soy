{namespace templates_testTemplate}
/**
 * Container Template
 * @param item Item in context
 */
{template .testTemplate}
    <div class="bp-container P-test-template" data-pid="{$item.name}">
        <div class="bp-area P-test-template--area">
            {foreach $child in $item.children}
            	{include($child) |noAutoescape}
            {/foreach}
        </div>
    </div>
{/template}